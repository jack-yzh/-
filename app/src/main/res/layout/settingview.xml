<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示更新"
        android:layout_margin="5dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_setting_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭提示更新"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:layout_below="@+id/tv_setting_title"/>

    <CheckBox
        android:id="@+id/cb_setting_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_alignBottom="@+id/tv_setting_des"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:focusable="false"/>
         <!--android:clickable="false" 不能获取点击事件-->
         <!--android:focusable="false"不能获取焦点-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000000"
        android:layout_below="@+id/cb_setting_checkBox"
        android:layout_marginTop="5dp"/>
</RelativeLayout>