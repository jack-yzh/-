<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="手机防盗"
        android:gravity="center_horizontal"
        android:background="@color/green"
        android:textColor="@color/black"
        android:textSize="25sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_lostfind_safe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:layout_margin="5dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_lostfind_safenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5556"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:layout_alignParentRight="true"/>
        <View
            android:id="@+id/view_lostfind_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black"
            android:layout_below="@id/tv_lostfind_safe"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防盗保护是否开启"
            android:layout_margin="5dp"
            android:textSize="18sp"
            />
        <ImageView
            android:id="@+id/iv_lostfind_protected"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/unlock"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="重新进入设置向导"
        android:textSize="18dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:background="@drawable/shape_drawable_button"
        android:onClick="turnGuideView"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="功能简介"
        android:textSize="18dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="GPS追踪：#*location*#"
        android:textSize="18dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/star_big_on"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="播放报警音乐#*alarm*#"
        android:textSize="18dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/star_big_on"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="远程删除数据：#*wipedate*#"
        android:textSize="18dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/star_big_on"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="远程锁屏：#*lockscreen*#"
        android:textSize="18dp"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/star_big_on"/>

</LinearLayout>